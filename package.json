{
  "name": "timetabling01",
  "version": "1.0.0",
  "description": "Examination Timetabling System",
  "main": "backend/src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:frontend": "cd frontend && npx vite",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mui/icons-material": "^5.0.0",
    "@mui/material": "^5.0.0",
    "concurrently": "^8.0.0",
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "vite": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
